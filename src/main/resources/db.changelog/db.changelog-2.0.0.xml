<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="viewError" author="Madhurshani">
        <createView viewName="first">select id, first_name, last_name
                                     from students</createView>
    </changeSet>
    <changeSet id="view" author="Madhurshani">
        <createView viewName="name">select id, email
                                    from students
                                    where gender = 'Male'</createView>
    </changeSet>
    <changeSet id="mergeCol" author="Madhurshani">
        <mergeColumns tableName="students" column1Name="first_name" joinString=" " column2Name="last_name"
                      finalColumnName="full_name"
                      finalColumnType="VARCHAR(255)"></mergeColumns>
    </changeSet>
    <changeSet id="view2" author="Madhurshani">
        <createView viewName="name2">select id, full_name
                                     from students</createView>
    </changeSet>
</databaseChangeLog>